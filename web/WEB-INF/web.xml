<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>getProductMaxQuantity</servlet-name>
        <servlet-class>controller.cart.getProductMaxQuantity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_to_cart_process</servlet-name>
        <servlet-class>controller.cart.add_to_cart_process</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>customer_cart_list</servlet-name>
        <servlet-class>controller.cart.customer_cart_list</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JsonToJpeg</servlet-name>
        <servlet-class>controller.json.JsonToJpeg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_cart</servlet-name>
        <servlet-class>controller.cart.delete_cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartQuantityChangeProcess</servlet-name>
        <servlet-class>controller.cart.CartQuantityChangeProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StripePaymentController</servlet-name>
        <servlet-class>controller.payment.StripePaymentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payment_process</servlet-name>
        <servlet-class>controller.payment.payment_process</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getProductMaxQuantity</servlet-name>
        <url-pattern>/web/product/add_to_cart.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_to_cart_process</servlet-name>
        <url-pattern>/add_to_cart_process</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customer_cart_list</servlet-name>
        <url-pattern>/web/customer/list_cart.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JsonToJpeg</servlet-name>
        <url-pattern>/JsonToJpeg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete_cart</servlet-name>
        <url-pattern>/delete_cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartQuantityChangeProcess</servlet-name>
        <url-pattern>/CartQuantityChangeProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StripePaymentController</servlet-name>
        <url-pattern>/web/payment/process.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payment_process</servlet-name>
        <url-pattern>/web/payment/done_pay.jsp</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
